DESCRIPTION="GTK+ music player fork of BMP/XMMS"
HOMEPAGE="http://audacious-media-player.org/"
SRC_URI="http://distfiles.audacious-media-player.org/${P}.tar.bz2"
PATCH_URI="2.4-buildsys.patch"

PKG_NAMES="${PN} ${PN}-devel"
audacious_CONTENTS="etc/ usr/bin/ usr/share/"
audacious_devel_CONTENTS="usr/include/ usr/lib/"

NO_AUTOPOINT=1
NO_ACLOCAL=1

src_compile() {
	cd ${S}
	cygautoreconf
	lndirs
	cd ${B}
	cygconf \
		--disable-altivec \
		--with-regexlib=pcre
	cygmake
}
